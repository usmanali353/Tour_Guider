<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fyp.tourguider">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CitiesAdmin"
            android:label="@string/title_activity_cities_admin"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".customer_booking_page"
            android:label="@string/title_activity_customer_booking_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookingDetailPage"
            android:label="@string/title_activity_booking_detail_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Book_Tour"
            android:label="@string/title_activity_book__tour"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".hotels_list"
            android:label="@string/title_activity_hotels_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".vehicle_list"
            android:label="@string/title_activity_vehicle_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Add_Hotel"
            android:label="@string/title_activity_add__hotel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tour_guiders_list"
            android:label="@string/title_activity_tour_guiders_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TouristDestinations"
            android:label="@string/title_activity_tourist_destinations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cities_for_destination"
            android:label="@string/title_activity_cities_for_destination"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".add_tourist_spot"
            android:label="@string/title_activity_add_tourist_spot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".customer_home"
            android:label="@string/title_activity_customer_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin_Home"
            android:label="@string/title_activity_admin__home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tour_guider_home"
            android:label="@string/title_activity_tour_guider_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".verify_code_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".splashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chatbot"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>